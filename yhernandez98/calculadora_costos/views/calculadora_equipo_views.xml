<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_calculadora_equipo_form" model="ir.ui.view">
        <field name="name">calculadora.equipo.form</field>
        <field name="model">calculadora.equipo</field>
        <field name="arch" type="xml">
            <form string="Calculadora de Equipos">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Ej: Equipo All in One"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="costo_total_cop" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="pago_mensual" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Costos del Equipo">
                            <group>
                                <group string="Valores en USD">
                                    <field name="valor_usd"/>
                                    <field name="valor_garantia_usd"/>
                                    <field name="costo_total_usd" widget="monetary" 
                                           options="{'currency_field': 'currency_usd_id'}" readonly="1"/>
                                </group>
                                <group string="Conversión a COP">
                                    <field name="porcentaje_utilidad"/>
                                    <field name="trm"/>
                                    <field name="costo_con_utilidad_usd" widget="monetary" 
                                           options="{'currency_field': 'currency_usd_id'}" readonly="1"/>
                                    <field name="costo_total_cop" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Servicios Técnicos">
                            <group>
                                <group>
                                    <field name="costo_servicios_completos"/>
                                    <field name="margen_servicio"/>
                                    <field name="servicio_con_margen" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Parámetros Financieros">
                            <group>
                                <group string="Tasas de Interés">
                                    <field name="tasa_nominal"/>
                                    <field name="tasa_mensual" readonly="1"/>
                                    <field name="tasa_efectiva_anual" readonly="1"/>
                                </group>
                                <group string="Plazo">
                                    <field name="plazo_meses"/>
                                </group>
                            </group>
                        </page>
                        <page string="Opción de Compra">
                            <group>
                                <group>
                                    <field name="porcentaje_opcion_compra"/>
                                    <field name="valor_opcion_compra" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Resumen">
                            <group>
                                <group string="Resumen Financiero">
                                    <label for="costo_total_cop" string="Costo Total:"/>
                                    <div>
                                        <field name="costo_total_cop" widget="monetary" 
                                               options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    </div>
                                    <label for="pago_mensual" string="Pago Mensual:"/>
                                    <div>
                                        <field name="pago_mensual" widget="monetary" 
                                               options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    </div>
                                    <label for="plazo_meses" string="Plazo:"/>
                                    <div>
                                        <field name="plazo_meses" readonly="1"/>
                                        <span> meses</span>
                                    </div>
                                    <label for="total_pagar" string="Total a Pagar:"/>
                                    <div>
                                        <strong>
                                            <field name="total_pagar" widget="monetary" 
                                                   options="{'currency_field': 'currency_id'}" 
                                                   readonly="1"/>
                                        </strong>
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string="Notas">
                            <group>
                                <field name="notas" placeholder="Agregar notas adicionales..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_calculadora_equipo_list" model="ir.ui.view">
        <field name="name">calculadora.equipo.list</field>
        <field name="model">calculadora.equipo</field>
        <field name="arch" type="xml">
            <list string="Calculadoras de Equipos" decoration-muted="active == False">
                <field name="name"/>
                <field name="valor_usd" widget="monetary" 
                       options="{'currency_field': 'currency_usd_id'}"/>
                <field name="costo_total_cop" widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
                <field name="pago_mensual" widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
                <field name="plazo_meses"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_calculadora_equipo_search" model="ir.ui.view">
        <field name="name">calculadora.equipo.search</field>
        <field name="model">calculadora.equipo</field>
        <field name="arch" type="xml">
            <search string="Buscar Calculadoras">
                <field name="name" string="Equipo"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="24 Meses" name="plazo_24" domain="[('plazo_meses', '=', 24)]"/>
                <filter string="36 Meses" name="plazo_36" domain="[('plazo_meses', '=', 36)]"/>
                <filter string="48 Meses" name="plazo_48" domain="[('plazo_meses', '=', 48)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Plazo" name="group_plazo" context="{'group_by': 'plazo_meses'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_calculadora_equipo" model="ir.actions.act_window">
        <field name="name">Calculadora de Equipos</field>
        <field name="res_model">calculadora.equipo</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea una nueva calculadora de equipos
            </p>
            <p>
                Calcula el costo total y pagos mensuales de equipos informáticos
                incluyendo garantías, servicios técnicos, intereses y opciones de compra.
            </p>
        </field>
    </record>
</odoo>
