<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_license_quantity_warning_wizard_form" model="ir.ui.view">
        <field name="name">license.quantity.warning.wizard.form</field>
        <field name="model">license.quantity.warning.wizard</field>
        <field name="arch" type="xml">
            <form string="Modificar cantidad de licencias" class="o_subscription_form">
                <sheet>
                    <group class="oe_inline">
                        <field name="assignment_id" invisible="1"/>
                        <field name="quantity_current"/>
                        <field name="quantity_new"/>
                    </group>
                    <div class="mt-3">
                        <field name="warning_message" nolabel="1" readonly="1"/>
                    </div>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirmar cambio" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
