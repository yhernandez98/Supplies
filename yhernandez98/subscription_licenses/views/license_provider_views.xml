<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista para proveedores de licencias -->
    <record id="view_license_provider_stock_tree" model="ir.ui.view">
        <field name="name">license.provider.stock.tree</field>
        <field name="model">license.provider.stock</field>
        <field name="arch" type="xml">
            <list string="Stock de Licencias por Proveedor" class="o_license_module_list" default_group_by="provider_id">
                <field name="provider_id" string="Proveedor"/>
                <field name="license_product_id" string="Licencia (Servicio)"/>
                <field name="license_category_id" string="Categoría"/>
                <field name="cost_per_unit_usd" string="Costo Proveedor"/>
                <field name="is_unlimited" string="Ilimitado" widget="boolean_toggle"/>
                <field name="quantity" string="Cantidad Disponible" sum="Total"/>
            </list>
        </field>
    </record>

    <!-- Vista de resumen con totales (agrupada por proveedor) -->
    <record id="view_license_provider_stock_summary" model="ir.ui.view">
        <field name="name">license.provider.stock.summary</field>
        <field name="model">license.provider.stock</field>
        <field name="arch" type="xml">
            <list string="Resumen de Licencias por Proveedor" class="o_license_module_list" default_group_by="provider_id">
                <field name="provider_id" string="Proveedor"/>
                <field name="license_product_id" string="Licencia (Servicio)"/>
                <field name="license_category_id" string="Categoría"/>
                <field name="cost_per_unit_usd" string="Costo Proveedor"/>
                <field name="quantity" string="Cantidad Disponible" sum="Total por Proveedor"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para stock de proveedor -->
    <record id="view_license_provider_stock_form" model="ir.ui.view">
        <field name="name">license.provider.stock.form</field>
        <field name="model">license.provider.stock</field>
        <field name="arch" type="xml">
            <form string="Crear Licencias" class="o_subscription_form o_license_module_form">
                <sheet>
                    <group>
                        <group>
                            <field name="provider_partner_id" invisible="1"/>
                            <field name="provider_id" options="{'no_create': True}"/>
                            <field name="license_product_id" options="{'no_create': True}" context="{'license_provider_stock_select': 1}"/>
                        </group>
                        <group>
                            <field name="license_category_id" readonly="1"/>
                            <field name="cost_per_unit_usd"/>
                            <field name="is_unlimited" widget="boolean_toggle"/>
                            <field name="quantity" invisible="is_unlimited"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_license_provider_stock_search" model="ir.ui.view">
        <field name="name">license.provider.stock.search</field>
        <field name="model">license.provider.stock</field>
        <field name="arch" type="xml">
            <search string="Buscar Stock de Licencias">
                <field name="provider_id" string="Proveedor"/>
                <field name="license_product_id" string="Licencia"/>
                <field name="license_category_id" string="Categoría"/>
                <separator/>
                <filter string="Con Stock" name="with_stock" domain="[('quantity', '>', 0)]"/>
                <filter string="Sin Stock" name="no_stock" domain="[('quantity', '=', 0)]"/>
            </search>
        </field>
    </record>

    <!-- Acción para ver proveedores de licencias -->
    <record id="action_license_providers" model="ir.actions.act_window">
        <field name="name">Proveedores de Licencias</field>
        <field name="res_model">license.provider.stock</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_license_provider_stock_tree"/>
        <field name="context">{'search_default_group_provider': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Gestión de stock de licencias por proveedor
            </p>
            <p>
                Aquí puede ver y gestionar el stock de licencias disponibles de cada proveedor.
                Agrupe por proveedor para ver el total de licencias de cada uno.
                <br/>
                <strong>Total general:</strong> Suma de todas las licencias de todos los proveedores (ver columna Cantidad Disponible agrupada).
            </p>
        </field>
    </record>

    <!-- Vista kanban y acción - DESACTIVADO hasta resolver problema con res_partner -->
</odoo>
