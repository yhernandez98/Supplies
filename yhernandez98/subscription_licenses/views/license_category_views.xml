<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_license_category_tree" model="ir.ui.view">
        <field name="name">license.category.tree</field>
        <field name="model">license.category</field>
        <field name="arch" type="xml">
            <list string="Categorías de Licencia" class="o_license_module_list" decoration-muted="not active">
                <field name="name"/>
                <field name="code"/>
                <field name="license_count" string="Total Licencias"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_license_category_form" model="ir.ui.view">
        <field name="name">license.category.form</field>
        <field name="model">license.category</field>
        <field name="arch" type="xml">
            <form string="Categoría de Licencia" class="o_subscription_form o_license_module_form">
                <header>
                    <button name="action_activate" string="Activar" type="object" class="btn-primary" 
                            invisible="active"/>
                    <button name="action_deactivate" string="Desactivar" type="object" class="btn-secondary"
                            invisible="not active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_licenses" type="object" 
                                class="oe_stat_button" icon="fa-list">
                            <field name="license_count" widget="statinfo" string="Licencias"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="Ej: Office 365, Google Workspace"/>
                            <field name="code" placeholder="Código opcional"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción">
                            <field name="description" placeholder="Descripción de la categoría..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_license_category_search" model="ir.ui.view">
        <field name="name">license.category.search</field>
        <field name="model">license.category</field>
        <field name="arch" type="xml">
            <search string="Buscar Categorías">
                <field name="name"/>
                <field name="code"/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_license_category" model="ir.actions.act_window">
        <field name="name">Categorías de Licencia</field>
        <field name="res_model">license.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree una nueva categoría de licencia
            </p>
            <p>
                Las categorías permiten agrupar licencias relacionadas (ej: Office 365, Google Workspace).
                Todas las licencias con la misma categoría se agruparán juntas en la pestaña Facturable de las suscripciones.
            </p>
        </field>
    </record>
</odoo>
