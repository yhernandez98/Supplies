<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_license_report_wizard_form" model="ir.ui.view">
        <field name="name">license.report.wizard.form</field>
        <field name="model">license.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Licencias" class="o_subscription_form">
                <group>
                    <group>
                        <field name="report_type" required="1"/>
                        <field name="state" required="1"/>
                    </group>
                    <group>
                        <field name="month" invisible="report_type == 'expiring'"/>
                        <field name="year" invisible="report_type == 'expiring'"/>
                        <field name="include_equipment" invisible="report_type == 'expiring'"/>
                        <field name="include_users" invisible="report_type == 'expiring'"/>
                    </group>
                </group>
                <group>
                    <field name="partner_ids" widget="many2many_tags" 
                           placeholder="Todos los clientes (deje vacío)"/>
                    <field name="license_ids" widget="many2many_tags" 
                           placeholder="Todos los tipos (deje vacío)"/>
                </group>
                <footer>
                    <button name="action_generate_report" string="Generar Reporte PDF" 
                            type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_license_report_wizard" model="ir.actions.act_window">
        <field name="name">Generar Reporte de Licencias</field>
        <field name="res_model">license.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Acciones específicas para cada tipo de reporte -->
    <record id="action_report_by_partner" model="ir.actions.act_window">
        <field name="name">Reporte por Cliente</field>
        <field name="res_model">license.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_report_type': 'by_partner'}</field>
    </record>

    <record id="action_report_by_license" model="ir.actions.act_window">
        <field name="name">Reporte por Tipo de Licencia</field>
        <field name="res_model">license.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_report_type': 'by_license'}</field>
    </record>

    <record id="action_report_by_cost" model="ir.actions.act_window">
        <field name="name">Reporte de Costos</field>
        <field name="res_model">license.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_report_type': 'by_cost'}</field>
    </record>

    <record id="action_report_expiring" model="ir.actions.act_window">
        <field name="name">Reporte de Licencias Vencidas</field>
        <field name="res_model">license.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_report_type': 'expiring'}</field>
    </record>
</odoo>

