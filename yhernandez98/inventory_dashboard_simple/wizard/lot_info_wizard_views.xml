<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista form del wizard -->
    <record id="view_lot_info_wizard_form" model="ir.ui.view">
        <field name="name">lot.info.wizard.form</field>
        <field name="model">lot.info.wizard</field>
        <field name="arch" type="xml">
            <form string="Completar Información del Lote">
                <sheet>
                    <group>
                        <group>
                            <field name="lot_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="location_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="inventory_plate" placeholder="Ingrese la placa de inventario..."/>
                            <field name="security_plate" placeholder="Ingrese la placa de seguridad..."/>
                            <field name="internal_ref" placeholder="Ingrese la referencia interna..."/>
                            <field name="owner_id" 
                                   options="{'no_open': True}"
                                   placeholder="Seleccione el propietario..."/>
                        </group>
                    </group>
                </sheet>
                
                <footer>
                    <button name="action_save" type="object" 
                            string="Guardar" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del wizard -->
    <record id="action_lot_info_wizard" model="ir.actions.act_window">
        <field name="name">Completar Información del Lote</field>
        <field name="res_model">lot.info.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_lot_info_wizard_form"/>
    </record>
</odoo>

