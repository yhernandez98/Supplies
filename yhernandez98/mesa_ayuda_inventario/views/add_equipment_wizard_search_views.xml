<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de búsqueda para stock.lot en el contexto del wizard -->
        <record id="view_stock_lot_search_for_wizard" model="ir.ui.view">
            <field name="name">stock.lot.search.wizard</field>
            <field name="model">stock.lot</field>
            <field name="arch" type="xml">
                <search string="Buscar Equipos">
                    <field name="name" string="Número de Serie"/>
                    <field name="inventory_plate" string="Placa de Inventario"/>
                    <field name="product_id" string="Producto"/>
                    <field name="customer_id" string="Cliente"/>
                </search>
            </field>
        </record>
        
        <!-- Vista de búsqueda para customer.own.inventory en el contexto del wizard -->
        <record id="view_customer_own_inventory_search_for_wizard" model="ir.ui.view">
            <field name="name">customer.own.inventory.search.wizard</field>
            <field name="model">customer.own.inventory</field>
            <field name="arch" type="xml">
                <search string="Buscar Equipos Propios">
                    <field name="serial_number" string="Número de Serie"/>
                    <field name="product_id" string="Producto"/>
                    <field name="model" string="Modelo"/>
                    <field name="brand" string="Marca"/>
                    <field name="location" string="Ubicación"/>
                    <field name="partner_id" string="Cliente"/>
                </search>
            </field>
        </record>
    </data>
</odoo>

