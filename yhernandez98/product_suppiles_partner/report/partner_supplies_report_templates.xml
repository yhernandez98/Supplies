<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="partner_supplies_report_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="product_suppiles_partner.partner_supplies_report_pdf_document"/>
            </t>
        </t>
    </template>

    <template id="partner_supplies_report_pdf_document">
        <t t-set="company" t-value="env.company"/>
        <t t-call="web.internal_layout">
            <div class="page">
                <t t-set="p" t-value="doc.partner_id"/>
                <t t-set="include_components" t-value="data.get('include_components', True) if data else True"/>
                <t t-set="observation" t-value="data.get('observation', '') if data else ''"/>
                <t t-set="today" t-value="datetime.date.today()"/>

                <div class="text-center">
                    <h2>REPORTE DE PRODUCTOS SERIALIZADOS</h2>
                    <strong>
                        <span>Fecha corte: </span>
                        <span t-esc="today.strftime('%d/%m/%Y')"/>
                    </strong>
                </div>

                <table class="table table-sm" style="width:100%; margin-top:20px; border-collapse:collapse;">
                    <tbody>
                        <tr>
                            <td style="width:15%; border:1px solid #ddd; padding:8px;"><strong>CONTACTO:</strong></td>
                            <td style="width:35%; border:1px solid #ddd; padding:8px;" t-esc="p.name or ''"/>
                            <td style="width:15%; border:1px solid #ddd; padding:8px;"><strong>FECHA CORTE:</strong></td>
                            <td style="width:35%; border:1px solid #ddd; padding:8px;" t-esc="today.strftime('%d/%m/%Y')"/>
                        </tr>
                        <tr>
                            <td style="border:1px solid #ddd; padding:8px;"><strong>NIT:</strong></td>
                            <td style="border:1px solid #ddd; padding:8px;" t-esc="p.vat or ''"/>
                            <td style="border:1px solid #ddd; padding:8px;"><strong>TELÉFONO:</strong></td>
                            <td style="border:1px solid #ddd; padding:8px;" t-esc="p.phone or ''"/>
                        </tr>
                        <tr>
                            <td style="border:1px solid #ddd; padding:8px;"><strong>CORREO:</strong></td>
                            <td style="border:1px solid #ddd; padding:8px;" t-esc="p.email or ''"/>
                            <td style="border:1px solid #ddd; padding:8px;"><strong>DIRECCIÓN:</strong></td>
                            <td style="border:1px solid #ddd; padding:8px;" t-esc="p.contact_address or ''"/>
                        </tr>
                    </tbody>
                </table>

                <h3 style="background:#004f9f;color:#fff;padding:8px 12px;margin-top:20px;border-radius:4px;">
                    EQUIPOS ASIGNADOS
                </h3>

                <table class="table table-sm" style="width:100%; border-collapse:collapse; margin-top:10px;">
                    <thead>
                        <tr style="background:#e9ecef;">
                            <th style="border:1px solid #000; width:18%; padding:8px;">CÓDIGO SERIAL</th>
                            <th style="border:1px solid #000; padding:8px;">PRODUCTO</th>
                            <th style="border:1px solid #000; width:15%; padding:8px;">TIPO</th>
                            <th style="border:1px solid #000; width:20%; padding:8px;">UBICACIÓN</th>
                            <th style="border:1px solid #000; width:10%; padding:8px; text-align:center;">CANTIDAD</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="lots_to_show" t-value="p.all_lot_ids if include_components else p.main_lot_ids"/>
                        
                        <t t-foreach="lots_to_show or []" t-as="lot">
                            <t t-set="item_type" t-value="'Principal'"/>
                            <t t-set="is_component" t-value="False"/>
                            
                            <!-- Determinar tipo de item -->
                            <t t-if="hasattr(lot, 'lot_supply_line_ids')">
                                <t t-set="parent_lots" t-value="lot.env['stock.lot'].search([('lot_supply_line_ids.related_lot_id', '=', lot.id)])"/>
                                <t t-if="parent_lots">
                                    <t t-set="supply_line" t-value="lot.env['stock.lot.supply.line'].search([('related_lot_id', '=', lot.id)], limit=1)"/>
                                    <t t-if="supply_line">
                                        <t t-set="type_map" t-value="{'component': 'Componente', 'peripheral': 'Periférico', 'complement': 'Complemento'}"/>
                                        <t t-set="item_type" t-value="type_map.get(supply_line.item_type, 'Componente')"/>
                                        <t t-set="is_component" t-value="True"/>
                                    </t>
                                </t>
                            </t>
                            
                            <!-- Obtener ubicación -->
                            <t t-set="location_name" t-value="''"/>
                            <t t-if="hasattr(lot, 'current_location_id') and lot.current_location_id">
                                <t t-set="location_name" t-value="lot.current_location_id.complete_name"/>
                            </t>
                            <t t-else="">
                                <t t-set="quant" t-value="lot.env['stock.quant'].search([('lot_id', '=', lot.id), ('quantity', '>', 0), ('location_id.usage', '=', 'internal')], limit=1)"/>
                                <t t-if="quant">
                                    <t t-set="location_name" t-value="quant.location_id.complete_name"/>
                                </t>
                            </t>
                            
                            <tr t-att-style="'background-color:%s;' % ('#f8f9fa' if lot_index % 2 == 0 else 'white')">
                                <td style="border:1px solid #000; padding:6px;" t-esc="lot.name or ''"/>
                                <td style="border:1px solid #000; padding:6px;" t-esc="lot.product_id.display_name or ''"/>
                                <td style="border:1px solid #000; padding:6px; text-align:center;" t-esc="item_type"/>
                                <td style="border:1px solid #000; padding:6px;" t-esc="location_name"/>
                                <td style="border:1px solid #000; padding:6px; text-align:center;">1</td>
                            </tr>
                        </t>

                        <t t-if="not (lots_to_show and lots_to_show.ids)">
                            <tr>
                                <td colspan="5" style="border:1px solid #000; padding:12px; color:#6c757d; text-align:center;">
                                    No hay productos serializados asignados a este contacto.
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <!-- Observaciones -->
                <t t-if="observation">
                    <div style="margin-top:20px;">
                        <strong>Observaciones:</strong>
                        <div style="min-height:60px; border:1px solid #bbb; padding:10px; text-align:left; margin-top:8px; border-radius:4px;">
                            <t t-esc="observation"/>
                        </div>
                    </div>
                </t>

                <!-- Resumen -->
                <div style="margin-top:20px; padding:10px; background:#f8f9fa; border-radius:4px;">
                    <strong>Resumen:</strong>
                    <ul style="margin-top:8px;">
                        <li>Total Seriales Principales: <t t-esc="len(p.main_lot_ids)"/></li>
                        <t t-if="include_components">
                            <li>Total (Incluyendo Componentes): <t t-esc="len(p.all_lot_ids)"/></li>
                        </t>
                    </ul>
                </div>
            </div>
        </t>
    </template>
</odoo>

