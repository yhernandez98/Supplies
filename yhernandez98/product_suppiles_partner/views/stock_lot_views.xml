<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_production_lot_form_inherit_partner" model="ir.ui.view">
    <field name="name">production.lot.form.partner.inherit</field>
    <field name="model">stock.lot</field>
    <field name="inherit_id" ref="stock.view_production_lot_form"/>
    <field name="arch" type="xml">
      
      <xpath expr="//field[@name='product_id']/.." position="inside">
        <field name="related_partner_id" string="Usuario" options="{'no_create': True}" placeholder="Seleccione un usuario relacionado de la empresa según la ubicación..."/>
      </xpath>
      
    </field>
  </record>


</odoo>

