<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_routes_buttons" model="ir.ui.view">
        <field name="name">product.template.form.routes.buttons</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            
            <xpath expr="//header" position="inside">
                
                <button string="Seleccionar Todas las Rutas" 
                        type="object" 
                        name="action_select_all_routes" 
                        groups="stock.group_stock_user"
                        invisible="product_variant_count &gt; 1"/> <button string="Deseleccionar Todas las Rutas" 
                        type="object" 
                        name="action_deselect_all_routes" 
                        groups="stock.group_stock_user"
                        invisible="product_variant_count &gt; 1"/> </xpath>
        </field>
    </record>
</odoo>