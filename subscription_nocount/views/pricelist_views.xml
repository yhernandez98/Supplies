<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Odoo 19: Precios recurrentes = product.pricelist.item con plan_id (pestaña Recurring Prices en lista de precios).
         Añadimos columnas Cantidad y Moneda a esa lista. -->
    <record id="view_pricelist_form_inherit_currency" model="ir.ui.view">
        <field name="name">product.pricelist.form.subscription_nocount.currency</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="sale_subscription.product_pricelist_view"/>
        <field name="priority" eval="25"/>
        <field name="arch" type="xml">
            <!-- Columna Cantidad (client_quantity) después de plan_id -->
            <xpath expr="//list[.//field[@name='plan_id']]//field[@name='plan_id']" position="after">
                <field name="client_quantity" string="Cantidad" readonly="1"/>
            </xpath>
            <!-- Columna Moneda después de price -->
            <xpath expr="//list[.//field[@name='plan_id']]//field[@name='price']" position="after">
                <field name="currency_id" string="Moneda"
                       domain="[('name', 'in', ['COP', 'USD'])]"
                       options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
