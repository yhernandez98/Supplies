<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_supplies_report_wizard_form" model="ir.ui.view">
        <field name="name">partner.supplies.report.wizard.form</field>
        <field name="model">partner.supplies.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Productos Serializados">
                <group>
                    <group>
                        <field name="partner_id" 
                               options="{'no_open': False, 'no_create': False}"
                               placeholder="Seleccione un contacto..."/>
                        <field name="report_type" widget="radio" options="{'horizontal': true}"/>
                        <field name="include_components"/>
                    </group>
                    <group>
                        <field name="observation" placeholder="Observaciones adicionales..."/>
                    </group>
                </group>
                <footer>
                    <button string="Generar Reporte" 
                            name="action_generate_report" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_partner_supplies_report_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Productos Serializados</field>
        <field name="res_model">partner.supplies.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_type">action</field>
    </record>
</odoo>

