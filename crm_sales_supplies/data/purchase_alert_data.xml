<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Registro de modelos para permisos -->
        <record id="model_purchase_alert" model="ir.model">
            <field name="name">purchase.alert</field>
            <field name="model">purchase.alert</field>
            <field name="info">Alerta de Compra por Falta de Stock</field>
        </record>
        
        <record id="model_purchase_alert_line" model="ir.model">
            <field name="name">purchase.alert.line</field>
            <field name="model">purchase.alert.line</field>
            <field name="info">Línea de Producto en Alerta de Compra</field>
        </record>
        
        <record id="model_purchase_alert_component_line" model="ir.model">
            <field name="name">purchase.alert.component.line</field>
            <field name="model">purchase.alert.component.line</field>
            <field name="info">Línea de Componente/Periférico/Complemento en Alerta de Compra</field>
        </record>
        
        <record id="model_purchase_alert_validation_wizard" model="ir.model">
            <field name="name">purchase.alert.validation.wizard</field>
            <field name="model">purchase.alert.validation.wizard</field>
            <field name="info">Wizard para Validar Cotizaciones de Alerta</field>
        </record>

        <!-- Secuencia para alertas por cotización -->
        <record id="sequence_purchase_alert" model="ir.sequence">
            <field name="name">Alerta de Compra</field>
            <field name="code">purchase.alert</field>
            <field name="prefix">ALTA</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
