<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del wizard para crear cotización manual -->
        <record id="view_purchase_alert_manual_quotation_wizard_form" model="ir.ui.view">
            <field name="name">purchase.alert.manual.quotation.wizard.form</field>
            <field name="model">purchase.alert.manual.quotation.wizard</field>
            <field name="arch" type="xml">
                <form string="Crear Cotización Manual">
                    <group>
                        <group>
                            <field name="alert_id" invisible="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="lead_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Descripción de la Solicitud" name="description">
                            <group>
                                <field name="description" 
                                       placeholder="Describe los productos o servicios que necesita cotizar..."
                                       required="1"
                                       nolabel="1"/>
                            </group>
                        </page>
                        
                        <page string="Proveedores" name="vendors">
                            <group>
                                <field name="vendor_ids" 
                                       widget="many2many_tags" 
                                       options="{'no_create': False, 'no_open': True}"
                                       required="1"
                                       nolabel="1"/>
                                <p class="text-muted" style="margin-top: 10px;">
                                    <i class="fa fa-info-circle"/> Seleccione los proveedores a los que desea enviar esta cotización.
                                </p>
                            </group>
                        </page>
                        
                        <page string="Notas Adicionales" name="notes">
                            <group>
                                <field name="notes" 
                                       placeholder="Agregue notas adicionales que se incluirán en todas las órdenes de compra..."
                                       nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                    
                    <footer>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                        <button string="Crear Cotizaciones" 
                                name="action_create_quotations" 
                                type="object" 
                                class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para abrir el wizard -->
        <record id="action_purchase_alert_manual_quotation_wizard" model="ir.actions.act_window">
            <field name="name">Crear Cotización Manual</field>
            <field name="res_model">purchase.alert.manual.quotation.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>

