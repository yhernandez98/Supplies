<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del wizard para crear alertas de compra desde CRM Lead -->
        <record id="view_crm_lead_purchase_alert_wizard_form" model="ir.ui.view">
            <field name="name">crm.lead.purchase.alert.wizard.form</field>
            <field name="model">crm.lead.purchase.alert.wizard</field>
            <field name="arch" type="xml">
                <form string="Solicitar Cotización de Compra">
                    <sheet>
                        <group>
                            <group>
                                <field name="lead_id" required="1" options="{'no_open': False, 'no_create': False}"/>
                                <field name="partner_id" readonly="1" string="Cliente"/>
                            </group>
                            <group>
                                <field name="notes" placeholder="Notas adicionales sobre la solicitud..."/>
                            </group>
                        </group>
                        
                        <group string="Productos a Solicitar">
                            <field name="line_ids" nolabel="1" context="{'default_wizard_id': id}">
                                <list editable="bottom" create="1" delete="1" string="Líneas de Productos">
                                    <field name="product_id" required="1"/>
                                    <field name="quantity" required="1"/>
                                    <field name="uom_id" readonly="1"/>
                                    <field name="stock_available" readonly="1" string="Stock Disponible"/>
                                    <field name="force_create" string="Crear de Todas Formas"/>
                                </list>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Crear Alertas" name="action_create_alerts" type="object" class="btn-primary"/>
                        <button string="Cancelar" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para abrir el wizard -->
        <record id="action_crm_lead_purchase_alert_wizard" model="ir.actions.act_window">
            <field name="name">Solicitar Cotización de Compra</field>
            <field name="res_model">crm.lead.purchase.alert.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_lead_id': active_id}</field>
        </record>
    </data>
</odoo>

