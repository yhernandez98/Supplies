<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario del wizard -->
        <record id="view_purchase_quotation_wizard_form" model="ir.ui.view">
            <field name="name">purchase.quotation.wizard.form</field>
            <field name="model">purchase.quotation.wizard</field>
            <field name="arch" type="xml">
                <form string="Enviar Cotización a Múltiples Proveedores">
                    <sheet>
                        <group>
                            <group>
                                <field name="alert_id" invisible="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="quantity_missing" readonly="1"/>
                            </group>
                            <group>
                                <field name="vendor_ids" 
                                       widget="many2many_tags" 
                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                       required="1"
                                       placeholder="Busque y seleccione uno o más proveedores de la lista..."/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" 
                                   placeholder="Notas adicionales que se agregarán a todas las órdenes de compra..."/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_create_quotations" 
                                string="Crear Cotizaciones" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancelar" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para el wizard -->
        <record id="action_purchase_quotation_wizard" model="ir.actions.act_window">
            <field name="name">Enviar Cotización a Proveedores</field>
            <field name="res_model">purchase.quotation.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_alert_id': active_id}</field>
        </record>
    </data>
</odoo>

