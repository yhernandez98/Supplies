<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extender vista de Purchase Order -->
        <record id="view_purchase_order_form_sales_supplies" model="ir.ui.view">
            <field name="name">purchase.order.form.sales.supplies</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!-- Agregar campo de referencia de alerta debajo del campo Proyecto -->
                <xpath expr="//field[@name='project_id']" position="after">
                    <field name="purchase_alert_references" string="Alerta Solicitud:" readonly="1" invisible="not purchase_alert_references"/>
                    <field name="crm_validation_status" string="Estado Validación CRM" readonly="1" 
                           widget="badge" 
                           decoration-success="crm_validation_status == 'approved'"
                           decoration-danger="crm_validation_status == 'rejected'"
                           decoration-info="crm_validation_status == 'pending'"
                           invisible="not purchase_alert_references"/>
                    <separator string="Leasing" invisible="not is_leasing"/>
                    <field name="is_leasing" string="Es Leasing" widget="boolean_toggle"/>
                    <field name="leasing_brand_id" 
                           string="Marca de Leasing"
                           invisible="not is_leasing"
                           options="{'no_create': True}"/>
                    <field name="leasing_contract_id" 
                           string="Contrato de Leasing"
                           invisible="not is_leasing"
                           options="{'no_create': True}"/>
                    <button name="action_create_leasing_contract" 
                            type="object" 
                            string="Crear Contrato de Leasing" 
                            class="oe_highlight"
                            invisible="not is_leasing or leasing_contract_id"
                            icon="fa-file-contract"/>
                    <button name="action_view_leasing_contract" 
                            type="object" 
                            string="Ver Contrato de Leasing" 
                            class="btn-secondary"
                            invisible="not leasing_contract_id"
                            icon="fa-eye"/>
                </xpath>
                <!-- Mostrar alerta si está rechazada y bloqueada -->
                <xpath expr="//form/header" position="inside">
                    <div class="alert alert-danger" role="alert" invisible="not (is_alert_validated and rejected_by_crm)">
                        <p><strong>⚠️ Cotización Rechazada y Bloqueada</strong></p>
                        <p>Esta cotización ha sido rechazada por CRM y está bloqueada. No se pueden realizar modificaciones.</p>
                    </div>
                </xpath>
            </field>
        </record>
        
        <!-- Heredar la vista tree/list estándar de purchase order para agregar columna Validación CRM -->
        <!-- Usar purchase.purchase_order_kpis_tree que es la vista principal de solicitudes de cotización -->
        <record id="view_purchase_order_tree_crm_validation" model="ir.ui.view">
            <field name="name">purchase.order.tree.crm.validation</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <!-- Agregar columna Validación CRM después del campo name (Referencia) -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="state_display" string="Validación CRM" 
                           widget="badge" 
                           decoration-success="state_display == 'Aprobada'"
                           decoration-danger="state_display == 'Rechazada'"
                           decoration-info="state_display == 'Pendiente Validación' or state_display == 'Pendiente'"
                           optional="show"/>
                    <field name="is_leasing" string="Leasing" widget="boolean_toggle" optional="show"/>
                    <field name="leasing_brand_id" string="Marca Leasing" optional="hide"/>
                </xpath>
            </field>
        </record>
        
        <!-- También heredar purchase.purchase_order_tree por si se usa en otras vistas -->
        <record id="view_purchase_order_tree_crm_validation_standard" model="ir.ui.view">
            <field name="name">purchase.order.tree.crm.validation.standard</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="state_display" string="Validación CRM" 
                           widget="badge" 
                           decoration-success="state_display == 'Aprobada'"
                           decoration-danger="state_display == 'Rechazada'"
                           decoration-info="state_display == 'Pendiente Validación' or state_display == 'Pendiente'"
                           optional="show"/>
                    <field name="is_leasing" string="Leasing" widget="boolean_toggle" optional="show"/>
                    <field name="leasing_brand_id" string="Marca Leasing" optional="hide"/>
                </xpath>
            </field>
        </record>
        
