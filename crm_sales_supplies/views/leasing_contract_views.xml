<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista de Contratos de Leasing -->
    <record id="view_leasing_contract_tree" model="ir.ui.view">
        <field name="name">leasing.contract.list</field>
        <field name="model">leasing.contract</field>
        <field name="arch" type="xml">
            <list string="Contratos de Leasing" decoration-muted="state == 'cancelled' or state == 'expired'">
                <field name="name"/>
                <field name="brand_ids" widget="many2many_tags"/>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge" decoration-success="state == 'active'" decoration-info="state == 'draft'" decoration-danger="state == 'cancelled' or state == 'expired'"/>
                <field name="provider_count" widget="statinfo" string="Proveedores"/>
                <field name="product_count" widget="statinfo" string="Productos"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario de Contrato de Leasing -->
    <record id="view_leasing_contract_form" model="ir.ui.view">
        <field name="name">leasing.contract.form</field>
        <field name="model">leasing.contract</field>
        <field name="arch" type="xml">
            <form string="Contrato de Leasing">
                <header>
                    <button name="action_activate" type="object" string="Activar" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_expire" type="object" string="Vencer" invisible="state != 'active'"/>
                    <button name="action_cancel" type="object" string="Cancelar" invisible="state in ['cancelled', 'expired']"/>
                    <button name="%(action_report_leasing_contract)d" type="action" string="Imprimir PDF" class="btn-secondary" icon="fa-file-pdf"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_providers" type="object" class="oe_stat_button" icon="fa-truck">
                            <field name="provider_count" widget="statinfo" string="Proveedores"/>
                        </button>
                        <button name="action_view_products" type="object" class="oe_stat_button" icon="fa-cube">
                            <field name="product_count" widget="statinfo" string="Productos"/>
                        </button>
                        <button name="action_view_purchase_orders" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                            <field name="purchase_order_count" widget="statinfo" string="Órdenes de Compra"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Vencido" bg_color="text-danger" invisible="state != 'expired'"/>
                    <widget name="web_ribbon" title="Cancelado" bg_color="text-danger" invisible="state != 'cancelled'"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="brand_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="partner_id" options="{'no_create': True}" 
                                   context="{'form_view_initial_mode': 'edit'}"/>
                            <field name="template_id" options="{'no_create': False}" 
                                   domain="[('active', '=', True)]"
                                   context="{'default_active': True}"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,active,expired"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Proveedores Asignados" name="providers">
                            <field name="provider_ids" widget="many2many_tags" domain="[('supplier_rank', '>', 0)]" options="{'no_create': True}"/>
                            <p class="text-muted">
                                Proveedores que la marca ha indicado que despacharán los productos de este contrato.
                            </p>
                        </page>
                        <page string="Productos Incluidos" name="products">
                            <field name="product_line_ids" nolabel="1">
                                <list>
                                    <field name="product_id"/>
                                    <field name="product_tmpl_id"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Notas sobre el contrato..."/>
                        </page>
                        <page string="Vista Previa del Contrato" name="preview" invisible="not rendered_content">
                            <div class="alert alert-info" role="alert">
                                <strong>Vista Previa:</strong> Esta es una vista previa del contenido del contrato basado en la plantilla seleccionada.
                            </div>
                            <field name="rendered_content" readonly="1" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda de Contratos de Leasing -->
    <record id="view_leasing_contract_search" model="ir.ui.view">
        <field name="name">leasing.contract.search</field>
        <field name="model">leasing.contract</field>
        <field name="arch" type="xml">
            <search string="Contratos de Leasing">
                <field name="name"/>
                <field name="brand_ids" widget="many2many_tags"/>
                <field name="partner_id"/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Activos" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Vencidos" name="expired" domain="[('state', '=', 'expired')]"/>
                <filter string="Cancelados" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Archivados" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Acción de Contratos de Leasing -->
    <record id="action_leasing_contract" model="ir.actions.act_window">
        <field name="name">Contratos de Leasing</field>
        <field name="res_model">leasing.contract</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer contrato de leasing
            </p>
            <p>
                Los contratos de leasing te permiten gestionar los acuerdos con grandes marcas
                (HP, Dell, etc.) donde ellos indican qué proveedores despacharán los productos.
            </p>
        </field>
    </record>
</odoo>

