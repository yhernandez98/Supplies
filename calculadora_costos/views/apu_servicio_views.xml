<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_apu_servicio_form" model="ir.ui.view">
        <field name="name">apu.servicio.form</field>
        <field name="model">apu.servicio</field>
        <field name="arch" type="xml">
            <form string="APU - Servicio">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Ej: Servicio Técnico General"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="costo_hora_tecnico" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="costo_hora_remoto" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Parámetros de Vehículo">
                            <group>
                                <group>
                                    <field name="costo_vehiculo"/>
                                    <field name="años_depreciacion_vehiculo"/>
                                    <field name="costo_mantenimiento_vehiculo"/>
                                    <field name="salario_conductor"/>
                                    <field name="factor_prestaciones_conductor"/>
                                </group>
                                <group>
                                    <field name="costo_hora_vehiculo" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Parámetros de Técnico">
                            <group>
                                <group>
                                    <field name="salario_tecnico"/>
                                    <field name="factor_prestaciones_tecnico"/>
                                    <field name="costo_hora_tecnico" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Parámetros de Internet">
                            <group>
                                <group>
                                    <field name="costo_internet_claro"/>
                                    <field name="costo_internet_etb"/>
                                    <field name="costo_infraestructura_total"/>
                                    <field name="costo_hora_internet" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Parámetros de Trabajo">
                            <group>
                                <group>
                                    <field name="horas_trabajo_mes"/>
                                    <field name="dias_trabajo_mes"/>
                                    <field name="horas_trabajo_dia"/>
                                </group>
                            </group>
                        </page>
                        <page string="Costos Calculados">
                            <group>
                                <group string="Costos por Hora">
                                    <field name="costo_hora_vehiculo" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    <field name="costo_hora_tecnico" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    <field name="costo_hora_internet" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    <field name="costo_hora_remoto" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                                <group string="Costos de Actividades">
                                    <field name="costo_alistamiento" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    <field name="costo_instalacion" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notas">
                            <group>
                                <field name="notas" placeholder="Agregar notas adicionales..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_apu_servicio_list" model="ir.ui.view">
        <field name="name">apu.servicio.list</field>
        <field name="model">apu.servicio</field>
        <field name="arch" type="xml">
            <list string="APU Servicios" decoration-muted="active == False">
                <field name="name"/>
                <field name="costo_hora_vehiculo" widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
                <field name="costo_hora_tecnico" widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
                <field name="costo_hora_internet" widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
                <field name="costo_hora_remoto" widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_apu_servicio_search" model="ir.ui.view">
        <field name="name">apu.servicio.search</field>
        <field name="model">apu.servicio</field>
        <field name="arch" type="xml">
            <search string="Buscar APU Servicios">
                <field name="name"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_apu_servicio" model="ir.actions.act_window">
        <field name="name">APU - Servicios</field>
        <field name="res_model">apu.servicio</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo APU de Servicio
            </p>
            <p>
                Calcula los costos por hora de recursos técnicos, vehículos, internet y soporte remoto.
            </p>
        </field>
    </record>
</odoo>
