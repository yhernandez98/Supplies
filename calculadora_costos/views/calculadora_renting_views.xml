<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_calculadora_renting_form" model="ir.ui.view">
        <field name="name">calculadora.renting.form</field>
        <field name="model">calculadora.renting</field>
        <field name="arch" type="xml">
            <form string="Calculadora de Renting">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_subscriptions" 
                                icon="fa-file-text" context="{'default_partner_id': partner_id}">
                            <field name="subscription_count" widget="statinfo" string="Suscripciones Activas"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="Ej: Renting Equipo All in One"/>
                            <field name="partner_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="costo_total_cop" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="pago_mensual" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Costos del Equipo">
                            <group>
                                <group string="Valores en USD">
                                    <field name="valor_usd"/>
                                    <field name="valor_garantia_usd"/>
                                </group>
                                <group string="Conversión a COP">
                                    <field name="porcentaje_utilidad"/>
                                    <field name="trm"/>
                                    <field name="costo_total_cop" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Servicios Técnicos">
                            <group>
                                <group>
                                    <field name="costo_servicios_completos"/>
                                    <field name="porcentaje_margen_servicio"/>
                                    <field name="servicio_con_margen" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Parámetros Financieros">
                            <group>
                                <group string="Tasas de Interés">
                                    <field name="tasa_nominal"/>
                                    <field name="tasa_efectiva_anual" readonly="1"/>
                                </group>
                                <group string="Plazo">
                                    <field name="plazo_meses"/>
                                </group>
                            </group>
                        </page>
                        <page string="Opción de Compra">
                            <group>
                                <group>
                                    <field name="porcentaje_opcion_compra"/>
                                    <field name="valor_opcion_compra" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Comparación de Plazos">
                            <group>
                                <group string="Valores por Plazo">
                                    <label for="valor_24_meses" string="24 Meses:"/>
                                    <div>
                                        <field name="valor_24_meses" widget="monetary" 
                                               options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    </div>
                                    <label for="valor_36_meses" string="36 Meses:"/>
                                    <div>
                                        <field name="valor_36_meses" widget="monetary" 
                                               options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    </div>
                                    <label for="valor_48_meses" string="48 Meses:"/>
                                    <div>
                                        <field name="valor_48_meses" widget="monetary" 
                                               options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string="Suscripciones No Contables">
                            <group>
                                <group>
                                    <label for="partner_id" string="Cliente:"/>
                                    <div>
                                        <field name="partner_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                    </div>
                                    <label for="subscription_count" string="Suscripciones Activas:"/>
                                    <div>
                                        <field name="subscription_count" readonly="1"/>
                                    </div>
                                    <div>
                                        <button name="action_view_subscriptions" 
                                                string="Ver Suscripciones Activas" 
                                                type="object" 
                                                class="btn-primary"
                                                icon="fa-file-text"
                                                invisible="not partner_id"/>
                                    </div>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert" invisible="partner_id">
                                <strong>Nota:</strong> Seleccione un cliente para ver sus suscripciones no contables activas.
                            </div>
                        </page>
                        <page string="Notas">
                            <group>
                                <field name="notas" placeholder="Agregar notas adicionales..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_calculadora_renting_list" model="ir.ui.view">
        <field name="name">calculadora.renting.list</field>
        <field name="model">calculadora.renting</field>
        <field name="arch" type="xml">
            <list string="Calculadoras de Renting" decoration-muted="active == False">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="valor_usd" widget="monetary" 
                       options="{'currency_field': 'currency_usd_id'}"/>
                <field name="costo_total_cop" widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
                <field name="pago_mensual" widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
                <field name="plazo_meses"/>
                <field name="subscription_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_calculadora_renting_search" model="ir.ui.view">
        <field name="name">calculadora.renting.search</field>
        <field name="model">calculadora.renting</field>
        <field name="arch" type="xml">
            <search string="Buscar Calculadoras de Renting">
                <field name="name" string="Contrato"/>
                <field name="partner_id" string="Cliente"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="12 Meses" name="plazo_12" domain="[('plazo_meses', '=', '12')]"/>
                <filter string="24 Meses" name="plazo_24" domain="[('plazo_meses', '=', '24')]"/>
                <filter string="36 Meses" name="plazo_36" domain="[('plazo_meses', '=', '36')]"/>
                <filter string="48 Meses" name="plazo_48" domain="[('plazo_meses', '=', '48')]"/>
                <filter string="60 Meses" name="plazo_60" domain="[('plazo_meses', '=', '60')]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Plazo" name="group_plazo" context="{'group_by': 'plazo_meses'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_calculadora_renting" model="ir.actions.act_window">
        <field name="name">Calculadora de Renting</field>
        <field name="res_model">calculadora.renting</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea una nueva calculadora de renting
            </p>
            <p>
                Calcula los costos y pagos mensuales para contratos de renting
                con diferentes plazos y opciones de compra. Puedes asociar un cliente
                para ver sus suscripciones no contables activas.
            </p>
        </field>
    </record>
</odoo>
