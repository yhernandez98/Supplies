<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Vista formulario en stock_lot_form_supplies_inherit.xml (carga primero). -->

  <!-- Heredar vista de lista para mostrar cantidad y agregar filtro -->
  <record id="view_production_lot_tree_inherit_supplies" model="ir.ui.view">
    <field name="name">production.lot.tree.supplies.inherit</field>
    <field name="model">stock.lot</field>
    <field name="inherit_id" ref="stock.view_production_lot_tree"/>
    <field name="priority" eval="15"/>
    <field name="arch" type="xml">
      <!-- Bot√≥n debug: en la lista de lotes (no depende del formulario). Header al inicio. -->
      <xpath expr="//list/field[1]" position="before">
        <header>
          <button name="action_log_supplies_view_debug" type="object" string="üîç Debug vistas form" class="btn-link" title="Escribe en el log del servidor. Busca [product_supplies]"/>
        </header>
      </xpath>
      <!-- Mostrar campo product_qty siempre visible -->
      <xpath expr="//field[@name='product_qty']" position="attributes">
        <attribute name="optional">show</attribute>
        <attribute name="string">Cantidad a la mano</attribute>
      </xpath>
      <!-- Agregar campo has_excess_quantity despu√©s de product_qty -->
      <xpath expr="//field[@name='product_qty']" position="after">
        <field name="has_excess_quantity" optional="hide" string="‚ö†Ô∏è Cantidad > 1"/>
      </xpath>
      <!-- C√≥digo Facturaci√≥n: no visible por defecto, pero se puede activar desde el men√∫ de columnas -->
      <xpath expr="//list" position="inside">
        <field name="billing_code" string="C√≥digo Facturaci√≥n" optional="hide"/>
      </xpath>
      <!-- Agregar decoraci√≥n visual para seriales con cantidad > 1 -->
      <xpath expr="//list" position="attributes">
        <attribute name="decoration-danger">has_excess_quantity == True</attribute>
      </xpath>
    </field>
  </record>

  <!-- Vista de b√∫squeda para agregar filtro de cantidad -->
  <record id="view_production_lot_search_inherit_supplies" model="ir.ui.view">
    <field name="name">production.lot.search.supplies.inherit</field>
    <field name="model">stock.lot</field>
    <field name="type">search</field>
    <field name="priority" eval="15"/>
    <field name="arch" type="xml">
      <search string="Buscar Seriales">
        <field name="name" string="N√∫mero de Serie"/>
        <field name="product_id" string="Producto"/>
        <field name="has_excess_quantity" invisible="1"/>
        <separator/>
        <filter string="‚ö†Ô∏è Cantidad > 1 (Error)" name="excess_quantity" domain="[('has_excess_quantity', '=', True)]" help="Seriales con cantidad a la mano mayor a 1"/>
        <filter string="‚úì Cantidad Correcta" name="correct_quantity" domain="[('has_excess_quantity', '!=', True)]" help="Seriales con cantidad a la mano = 1"/>
      </search>
    </field>
  </record>

  <record id="action_product_business_line" model="ir.actions.act_window">
    <field name="name">Lineas de negocio</field>
    <field name="res_model">product.business.line</field>
    <field name="view_mode">list,form</field>
    <field name="context">{}</field>
    <field name="help" type="html"><p>Define las Lineas de negocio.</p></field>
  </record>
  <record id="action_debug_stock_lot_views" model="ir.actions.server">
    <field name="name">üîç Debug vistas formulario Lote/Serial</field>
    <field name="model_id" ref="stock.model_stock_lot"/>
    <field name="state">code</field>
    <field name="code" type="py">action = env['stock.lot'].action_log_supplies_view_debug()</field>
  </record>

</odoo>
