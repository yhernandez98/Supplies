<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lot_supply_editor_wizard_form" model="ir.ui.view">
        <field name="name">lot.supply.editor.wizard.form</field>
        <field name="model">lot.supply.editor.wizard</field>
        <field name="arch" type="xml">
            <form string="Editar Elementos Asociados">
                <sheet>
                    <group>
                        <group>
                            <field name="lot_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Componentes" name="components">
                            <field name="component_lines" 
                                   context="{'default_item_type': 'component', 'default_wizard_id': id}"
                                   nolabel="1">
                                <list editable="bottom" create="1" delete="1">
                                    <field name="item_type" invisible="1"/>
                                    <field name="product_id" required="1"/>
                                    <field name="quantity" required="1"/>
                                    <field name="uom_id"/>
                                    <field name="related_lot_id" string="Lote/Serie"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="PerifÃ©ricos" name="peripherals">
                            <field name="peripheral_lines" 
                                   context="{'default_item_type': 'peripheral', 'default_wizard_id': id}"
                                   nolabel="1">
                                <list editable="bottom" create="1" delete="1">
                                    <field name="item_type" invisible="1"/>
                                    <field name="product_id" required="1"/>
                                    <field name="quantity" required="1"/>
                                    <field name="uom_id"/>
                                    <field name="related_lot_id" string="Lote/Serie"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Complementos" name="complements">
                            <field name="complement_lines" 
                                   context="{'default_item_type': 'complement', 'default_wizard_id': id}"
                                   nolabel="1">
                                <list editable="bottom" create="1" delete="1">
                                    <field name="item_type" invisible="1"/>
                                    <field name="product_id" required="1"/>
                                    <field name="quantity" required="1"/>
                                    <field name="uom_id"/>
                                    <field name="related_lot_id" string="Lote/Serie"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button name="action_debug_wizard" 
                            type="object" 
                            string="ðŸ” Debug" 
                            class="btn-secondary"
                            title="Mostrar informaciÃ³n de debug sobre las lÃ­neas del wizard"/>
                    <button name="action_save" 
                            type="object" 
                            string="Guardar" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            special="cancel" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_lot_supply_editor_wizard" model="ir.actions.act_window">
        <field name="name">Editar Elementos Asociados</field>
        <field name="res_model">lot.supply.editor.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_lot_supply_editor_wizard_form"/>
    </record>
</odoo>
