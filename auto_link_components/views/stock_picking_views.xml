<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SOLO agregar boton en el formulario de lote/serie individual -->
    <record id="view_production_lot_form_inherit_auto_link" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.auto.link</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="product_suppiles.view_production_lot_form_inherit_supplies"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='supplies_components']" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_link_same_lot_components" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-link"
                            string="Vincular componentes"
                            help="Busca y vincula automaticamente componentes con el mismo numero de lote"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>