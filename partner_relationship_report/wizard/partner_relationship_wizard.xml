<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_relationship_report_wizard" model="ir.ui.view">
        <field name="name">partner.relationship.report.wizard.form</field>
        <field name="model">partner.relationship.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Relaciones">
                <group>
                    <field name="partner_id"/>
                    <field name="report_type"/>
                    <field name="observation"/>
                </group>
                <footer>
                    <button name="action_generate_report" type="object" string="Generar" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_partner_relationship_report_wizard" model="ir.actions.act_window">
        <field name="name">Consultar Relaciones</field>
        <field name="res_model">partner.relationship.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_partner_relationship_report_wizard"/>
    </record>

</odoo>
