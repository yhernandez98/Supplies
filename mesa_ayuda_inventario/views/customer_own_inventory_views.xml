<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ========================================== -->
        <!-- VISTA KANBAN: Clientes con Inventario Propio -->
        <!-- ========================================== -->
        <record id="view_customer_own_inventory_kanban" model="ir.ui.view">
            <field name="name">customer.own.inventory.partner.kanban</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard customer-inventory-kanban" create="0" column_invisible="1">
                    <field name="name"/>
                    <field name="own_inventory_count"/>
                    <field name="property_stock_customer"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card customer-inventory-card" style="border-radius: 16px; box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2); background: linear-gradient(135deg, #10b981 0%, #34d399 100%); overflow: hidden; border: 1px solid #6ee7b7; transition: transform 0.3s ease, box-shadow 0.3s ease; width: 100%; height: 200px; display: flex; flex-direction: column; position: relative; margin: 0; padding: 0;" onmouseover="this.style.transform='translateY(-4px)'; this.style.boxShadow='0 8px 24px rgba(16, 185, 129, 0.35)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 12px rgba(16, 185, 129, 0.2)';">
                                <div style="background: linear-gradient(135deg, #059669 0%, #10b981 100%); border-bottom: 2px solid #a7f3d0; padding: 12px; text-align: center; color: white; flex: 1; display: flex; flex-direction: column; justify-content: space-between; min-height: 0; position: relative; z-index: 1; border-radius: 16px 16px 0 0;">
                                    <div style="margin-bottom: 8px; flex-shrink: 0;">
                                        <i class="fa fa-warehouse" style="font-size: 28px; opacity: 0.95; text-shadow: 0 2px 4px rgba(0,0,0,0.2);"/>
                                    </div>
                                    <div style="font-size: 14px; font-weight: bold; margin-bottom: 8px; text-shadow: 0 1px 2px rgba(0,0,0,0.2); line-height: 1.2; max-height: 48px; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; word-wrap: break-word; flex-shrink: 0;">
                                        <field name="name"/>
                                    </div>
                                    <div style="font-size: 12px; opacity: 0.95; padding: 5px; background: rgba(255,255,255,0.12); border-radius: 6px; backdrop-filter: blur(5px); margin-bottom: 8px; flex-shrink: 0; border: 1px solid rgba(255,255,255,0.1);">
                                        <i class="fa fa-cubes" style="margin-right: 4px;"/>
                                        <strong><field name="own_inventory_count"/> Productos Propios</strong>
                                    </div>
                                    <div style="flex-shrink: 0; display: flex; flex-direction: column; gap: 6px;">
                                        <button type="object" name="action_view_own_inventory" string="Ver Inventario Propio" style="width: 100% !important; padding: 8px !important; font-size: 12px !important; font-weight: 600 !important; border-radius: 6px !important; background: linear-gradient(135deg, #10b981 0%, #34d399 100%) !important; background-color: #10b981 !important; color: white !important; cursor: pointer !important; border: none !important; transition: none !important; box-shadow: 0 2px 4px rgba(16, 185, 129, 0.3) !important; outline: none !important;"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- VISTA KANBAN: Productos Propios del Cliente -->
        <!-- ========================================== -->
        <record id="view_customer_own_inventory_product_kanban" model="ir.ui.view">
            <field name="name">customer.own.inventory.product.kanban</field>
            <field name="model">customer.own.inventory</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" default_group_by="status">
                    <field name="display_name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="serial_number"/>
                    <field name="model"/>
                    <field name="brand"/>
                    <field name="status"/>
                    <field name="location"/>
                    <field name="warranty_status"/>
                    <field name="maintenance_count"/>
                    <progressbar field="status" colors='{"active": "success", "maintenance": "warning", "repair": "danger", "inactive": "muted", "disposed": "muted", "sold": "info"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click" style="border: 1px solid #d0d7de; border-radius: 20px; box-shadow: 0 2px 6px rgba(0,0,0,0.12); margin-bottom: 12px; background: #ffffff; overflow: hidden; transition: transform 0.2s, box-shadow 0.2s;" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 12px rgba(0,0,0,0.18)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 2px 6px rgba(0,0,0,0.12)';">
                                <!-- Header -->
                                <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-bottom: 2px solid #dbeafe; padding: 14px; border-radius: 20px 20px 0 0;">
                                    <div style="display: flex; align-items: center; gap: 12px;">
                                        <div style="flex: 1;">
                                            <div style="font-size: 17px; font-weight: 700; color: #ffffff; margin-bottom: 3px; text-shadow: 0 1px 2px rgba(0,0,0,0.2);">
                                                <field name="product_id"/>
                                            </div>
                                            <div t-if="record.serial_number.raw_value" style="font-size: 13px; color: rgba(255,255,255,0.95); font-weight: 500;">
                                                S/N: <field name="serial_number"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Body -->
                                <div style="padding: 14px; background: linear-gradient(to bottom, #fafbfc 0%, #ffffff 100%);">
                                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 0;">
                                        <tr t-if="record.model.raw_value">
                                            <td style="padding: 8px 0; font-size: 12px; color: #6c757d; width: 35%; border-bottom: 1px solid #e9ecef; font-weight: 500;">Modelo:</td>
                                            <td style="padding: 8px 0; font-size: 13px; color: #2c3e50; font-weight: 600; border-bottom: 1px solid #e9ecef;">
                                                <field name="model"/>
                                            </td>
                                        </tr>
                                        <tr t-if="record.brand.raw_value">
                                            <td style="padding: 8px 0; font-size: 12px; color: #6c757d; width: 35%; border-bottom: 1px solid #e9ecef; font-weight: 500;">Marca:</td>
                                            <td style="padding: 8px 0; font-size: 13px; color: #2c3e50; font-weight: 600; border-bottom: 1px solid #e9ecef;">
                                                <field name="brand"/>
                                            </td>
                                        </tr>
                                        <tr t-if="record.location.raw_value">
                                            <td style="padding: 8px 0; font-size: 12px; color: #6c757d; width: 35%; border-bottom: 1px solid #e9ecef; font-weight: 500;">Ubicaci√≥n:</td>
                                            <td style="padding: 8px 0; font-size: 13px; color: #2c3e50; font-weight: 600; border-bottom: 1px solid #e9ecef;">
                                                <field name="location"/>
                                            </td>
                                        </tr>
                                        <tr t-if="record.warranty_status.raw_value">
                                            <td style="padding: 8px 0; font-size: 12px; color: #6c757d; width: 35%; border-bottom: 1px solid #e9ecef; font-weight: 500;">Garant√≠a:</td>
                                            <td style="padding: 8px 0; font-size: 13px; font-weight: 600; border-bottom: 1px solid #e9ecef;">
                                                <span t-if="record.warranty_status.raw_value == 'active'" style="color: #059669;">‚úì En Garant√≠a</span>
                                                <span t-if="record.warranty_status.raw_value == 'expired'" style="color: #dc2626;">‚úó Vencida</span>
                                                <span t-if="record.warranty_status.raw_value == 'no_warranty'" style="color: #6b7280;">- Sin Garant√≠a</span>
                                            </td>
                                        </tr>
                                        <tr t-if="record.maintenance_count.raw_value > 0">
                                            <td style="padding: 8px 0; font-size: 12px; color: #6c757d; width: 35%; border-bottom: 1px solid #e9ecef; font-weight: 500;">Mantenimientos:</td>
                                            <td style="padding: 8px 0; font-size: 13px; color: #667eea; font-weight: 600; border-bottom: 1px solid #e9ecef;">
                                                <field name="maintenance_count"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- VISTA LISTA: Productos Propios -->
        <!-- ========================================== -->
        <record id="view_customer_own_inventory_list" model="ir.ui.view">
            <field name="name">customer.own.inventory.list</field>
            <field name="model">customer.own.inventory</field>
            <field name="arch" type="xml">
                <list string="Inventario Propio de Clientes" default_group_by="partner_id">
                    <field name="partner_id" string="Cliente"/>
                    <field name="product_id" string="Producto"/>
                    <field name="serial_number" string="N√∫mero de Serie"/>
                    <field name="model" string="Modelo"/>
                    <field name="brand" string="Marca"/>
                    <field name="status" string="Estado" widget="badge" 
                           decoration-success="status == 'active'"
                           decoration-info="status == 'maintenance'"
                           decoration-warning="status == 'repair'"
                           decoration-muted="status in ('inactive', 'disposed', 'sold')"/>
                    <field name="warranty_status" string="Garant√≠a" widget="badge"
                           decoration-success="warranty_status == 'active'"
                           decoration-danger="warranty_status == 'expired'"
                           decoration-muted="warranty_status == 'no_warranty'"/>
                    <field name="location" string="Ubicaci√≥n"/>
                    <field name="purchase_date" string="Fecha Compra"/>
                    <field name="warranty_end_date" string="Fin Garant√≠a"/>
                    <field name="associated_count" string="Asociados" optional="show"/>
                    <field name="maintenance_count" string="Mantenimientos" widget="statinfo"/>
                </list>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- VISTA FORMULARIO: Producto Propio -->
        <!-- ========================================== -->
        <record id="view_customer_own_inventory_form" model="ir.ui.view">
            <field name="name">customer.own.inventory.form</field>
            <field name="model">customer.own.inventory</field>
            <field name="arch" type="xml">
                <form string="Inventario Propio del Cliente">
                    <header>
                        <button name="action_view_maintenances" type="object" 
                                string="Ver Mantenimientos" 
                                class="oe_stat_button" 
                                icon="fa-wrench"
                                invisible="maintenance_count == 0">
                            <field name="maintenance_count" widget="statinfo" string="Mantenimientos"/>
                        </button>
                        <button name="action_report_life_sheet" type="object" 
                                string="Hoja de Vida" 
                                class="oe_stat_button" 
                                icon="fa-file-pdf-o"/>
                    </header>
                    <sheet>
                        <div class="alert alert-info mb-3" role="alert" style="margin-bottom: 12px;">
                            <strong>‚ÑπÔ∏è Inventario propio:</strong> Se usa el mismo cat√°logo de productos. Registrar aqu√≠ <strong>no modifica</strong> el stock ni el inventario de la empresa.
                        </div>
                        <group>
                            <group string="Identificaci√≥n">
                                <field name="serial_number" string="N√∫mero de serie" placeholder="Ingrese el n√∫mero de serie"/>
                                <field name="product_id" options="{'no_create': True}" placeholder="Buscar producto del cat√°logo..."/>
                                <field name="partner_id" string="Cliente" options="{'no_create': True, 'no_open': True}"/>
                                <field name="status" widget="radio" options="{'horizontal': true}"/>
                                <div style="float: right; margin: 10px; max-width: 200px;">
                                    <field name="product_image" widget="image" 
                                           options="{'size': [200, 200]}" 
                                           style="max-width: 200px; max-height: 200px; border-radius: 8px;"/>
                                </div>
                            </group>
                        </group>
                        <group>
                            <group string="Detalles del producto">
                                <field name="model"/>
                                <field name="brand"/>
                                <field name="location" placeholder="Ej: Oficina 101, Almac√©n Principal"/>
                                <field name="purchase_price" widget="monetary"/>
                            </group>
                            <group string="Fechas">
                                <field name="purchase_date"/>
                                <field name="warranty_end_date"/>
                                <field name="warranty_status" readonly="1" widget="badge"
                                       decoration-success="warranty_status == 'active'"
                                       decoration-danger="warranty_status == 'expired'"
                                       decoration-muted="warranty_status == 'no_warranty'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripci√≥n" name="description">
                                <field name="description" placeholder="Descripci√≥n detallada del producto..."/>
                            </page>
                            <page string="Notas" name="notes">
                                <field name="notes" placeholder="Notas adicionales..."/>
                            </page>
                            <page string="Productos asociados" name="associated" optional="show">
                                <p class="text-muted mb-2">Componentes, perif√©ricos o complementos de este equipo (mismo cliente).</p>
                                <field name="own_inventory_line_ids" nolabel="1">
                                    <list create="1" delete="1" edit="1">
                                        <field name="item_type" string="Tipo"/>
                                        <field name="related_own_inventory_id" string="Producto asociado" 
                                               domain="[('partner_id', '=', parent.partner_id), ('id', '!=', parent.id)]"
                                               options="{'no_create': False}"/>
                                        <field name="product_id" optional="hide"/>
                                        <field name="serial_number" optional="show"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Mantenimientos" name="maintenances" invisible="maintenance_count == 0">
                                <field name="maintenance_ids" nolabel="1" readonly="1">
                                    <list>
                                        <field name="maintenance_date" string="Fecha"/>
                                        <field name="maintenance_type" string="Tipo"/>
                                        <field name="technician_id" string="T√©cnico"/>
                                        <field name="description" string="Descripci√≥n"/>
                                        <field name="observations" string="Observaciones"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- VISTA DE B√öSQUEDA -->
        <!-- ========================================== -->
        <record id="view_customer_own_inventory_search" model="ir.ui.view">
            <field name="name">customer.own.inventory.search</field>
            <field name="model">customer.own.inventory</field>
            <field name="arch" type="xml">
                <search string="Buscar Inventario Propio">
                    <field name="partner_id" string="Cliente" filter_domain="['|', ('partner_id.name', 'ilike', self), ('partner_id.display_name', 'ilike', self)]"/>
                    <field name="product_id" string="Producto"/>
                    <field name="serial_number" string="N√∫mero de Serie"/>
                    <field name="model" string="Modelo"/>
                    <field name="brand" string="Marca"/>
                    <field name="location" string="Ubicaci√≥n"/>
                    <separator/>
                    <filter string="En Garant√≠a" name="warranty_active" 
                            domain="[('warranty_status', '=', 'active')]"/>
                    <filter string="Garant√≠a Vencida" name="warranty_expired" 
                            domain="[('warranty_status', '=', 'expired')]"/>
                    <filter string="Sin Garant√≠a" name="warranty_none" 
                            domain="[('warranty_status', '=', 'no_warranty')]"/>
                    <filter string="Activos" name="status_active" 
                            domain="[('status', '=', 'active')]"/>
                    <filter string="En Mantenimiento" name="status_maintenance" 
                            domain="[('status', '=', 'maintenance')]"/>
                    <filter string="En Reparaci√≥n" name="status_repair" 
                            domain="[('status', '=', 'repair')]"/>
                    <filter string="Inactivos" name="status_inactive" 
                            domain="[('status', '=', 'inactive')]"/>
                    <filter string="Desechados/Vendidos" name="status_disposed_sold" 
                            domain="[('status', 'in', ['disposed', 'sold'])]"/>
                    <separator/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Estado" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Garant√≠a" name="group_warranty" context="{'group_by': 'warranty_status'}"/>
                        <filter string="Producto" name="group_product" context="{'group_by': 'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- ACCI√ìN: Vista de Clientes con Inventario Propio -->
        <!-- ========================================== -->
        <record id="action_customer_own_inventory_clients" model="ir.actions.act_window">
            <field name="name">Clientes Propios</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,list</field>
            <field name="view_id" ref="view_customer_own_inventory_kanban"/>
            <field name="domain">[('is_company', '=', True), ('own_inventory_count', '>', 0)]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    üè¢ Selecciona un Cliente para Ver su Inventario Propio
                </p>
                <p>
                    <strong>Instrucciones:</strong><br/>
                    ‚Ä¢ Haz clic en "Ver Inventario Propio" en la tarjeta de un cliente para ver sus productos propios.<br/>
                    ‚Ä¢ Cada cliente muestra la cantidad de productos propios en su inventario.<br/>
                    ‚Ä¢ Los productos propios son aquellos que pertenecen al cliente, no a la empresa.
                </p>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- ACCI√ìN: Vista de Productos Propios -->
        <!-- ========================================== -->
        <record id="action_customer_own_inventory" model="ir.actions.act_window">
            <field name="name">Inventario Propio de Clientes</field>
            <field name="res_model">customer.own.inventory</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_id" ref="view_customer_own_inventory_product_kanban"/>
            <field name="search_view_id" ref="view_customer_own_inventory_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    üì¶ Crea tu Primer Producto Propio del Cliente
                </p>
                <p>
                    <strong>¬øQu√© es el Inventario Propio?</strong><br/>
                    Los productos propios son aquellos que pertenecen directamente al cliente,<br/>
                    no a la empresa. Esto permite llevar un control separado del inventario que<br/>
                    la empresa gestiona para el cliente.
                </p>
            </field>
        </record>

    </data>
</odoo>

