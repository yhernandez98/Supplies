<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista Formulario del Wizard para Agregar Equipos -->
        <record id="view_add_equipment_wizard_form" model="ir.ui.view">
            <field name="name">add.equipment.wizard.form</field>
            <field name="model">add.equipment.wizard</field>
            <field name="arch" type="xml">
                <form string="Agregar Equipos a la Orden">
                    <sheet>
                        <group>
                            <group>
                                <field name="maintenance_order_id" invisible="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="maintenance_type" required="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="equipment_ids" widget="many2many" nolabel="1" 
                                   domain="[('customer_id', '=', partner_id), ('is_main_product', '=', True)]"
                                   context="{'default_customer_id': partner_id, 'default_is_main_product': True}"
                                   options="{'no_create': True, 'no_open': True}">
                                <list>
                                    <field name="inventory_plate" string="Placa"/>
                                    <field name="name" string="Número de Serie"/>
                                    <field name="product_id" string="Producto"/>
                                    <field name="customer_id" string="Cliente"/>
                                </list>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Agregar Equipos" name="action_add_equipment" type="object" class="btn-primary"/>
                        <button string="Cancelar" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para el Wizard -->
        <record id="action_add_equipment_wizard" model="ir.actions.act_window">
            <field name="name">Agregar Equipos a la Orden</field>
            <field name="res_model">add.equipment.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>

