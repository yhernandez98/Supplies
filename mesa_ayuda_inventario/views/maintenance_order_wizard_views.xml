<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista Formulario del Wizard -->
        <record id="view_maintenance_order_wizard_form" model="ir.ui.view">
            <field name="name">maintenance.order.wizard.form</field>
            <field name="model">maintenance.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Crear Orden de Mantenimiento">
                    <sheet>
                        <field name="maintenance_order_id" invisible="1"/>
                        <group>
                            <group>
                                <field name="partner_id" options="{'no_create': True}" required="1"/>
                                <field name="technician_ids" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                                <field name="scheduled_date" required="1"/>
                                <field name="deadline_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Descripción general de la orden de mantenimiento..."/>
                        </group>
                        <notebook>
                            <page string="Equipos" name="equipos">
                                <field name="line_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="selected" widget="boolean_toggle"/>
                                        <field name="lot_id" readonly="1"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="maintenance_type"/>
                                        <field name="description" placeholder="Descripción específica para este equipo..."/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Crear Orden" name="action_create_order" type="object" class="btn-primary" invisible="maintenance_order_id"/>
                        <button string="Agregar Equipos" name="action_create_order" type="object" class="btn-primary" invisible="not maintenance_order_id"/>
                        <button string="Cancelar" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para el Wizard -->
        <record id="action_maintenance_order_wizard" model="ir.actions.act_window">
            <field name="name">Crear Orden de Mantenimiento</field>
            <field name="res_model">maintenance.order.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>

