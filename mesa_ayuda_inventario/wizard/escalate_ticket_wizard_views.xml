<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_helpdesk_ticket_escalate_wizard_form" model="ir.ui.view">
            <field name="name">helpdesk.ticket.escalate.wizard.form</field>
            <field name="model">helpdesk.ticket.escalate.wizard</field>
            <field name="arch" type="xml">
                <form string="Escalar ticket">
                    <group>
                        <field name="ticket_id"/>
                        <field name="team_id" options="{'no_create': True}" placeholder="Ej. Nivel 2"/>
                        <field name="user_id" options="{'no_create': True}"/>
                    </group>
                    <group string="Motivo de escalación">
                        <field name="escalation_reason" placeholder="Ej. Requiere especialista, cliente solicitó Nivel 2, tema técnico complejo..." nolabel="1" colspan="2"/>
                    </group>
                    <footer>
                        <button name="action_escalate" string="Escalar" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
