<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_equipment_change_wizard_form" model="ir.ui.view">
        <field name="name">equipment.change.wizard.form</field>
        <field name="model">equipment.change.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Actividad de Cambio de Equipo">
                <sheet>
                    <group>
                        <group>
                            <field name="lot_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="maintenance_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="activity_user_id" required="1"/>
                            <field name="activity_date_deadline" required="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="activity_summary" required="1"/>
                    </group>
                    <group>
                        <field name="activity_note" widget="html" options="{'toolbar': 'full', 'resizable': true, 'height': 200}"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Crear Actividad" name="action_create_activity" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_equipment_change_wizard" model="ir.actions.act_window">
        <field name="name">Cambio de Equipo</field>
        <field name="res_model">equipment.change.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

