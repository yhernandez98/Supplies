<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_activity_assignment_wizard_form" model="ir.ui.view">
        <field name="name">activity.assignment.wizard.form</field>
        <field name="model">activity.assignment.wizard</field>
        <field name="arch" type="xml">
            <form string="Asignar Actividad de ReparaciÃ³n">
                <sheet>
                    <group>
                        <field name="repair_order_id" invisible="1"/>
                        <field name="activity_user_id" required="1"/>
                        <field name="activity_date_deadline" required="1"/>
                    </group>
                    <group>
                        <field name="activity_summary" required="1"/>
                    </group>
                    <group>
                        <field name="activity_note" widget="html" options="{'toolbar': 'full', 'resizable': true, 'height': 200}"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Crear Actividad" name="action_create_activity" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_activity_assignment_wizard" model="ir.actions.act_window">
        <field name="name">Asignar Actividad</field>
        <field name="res_model">activity.assignment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

