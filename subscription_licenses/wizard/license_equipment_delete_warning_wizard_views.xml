<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_license_equipment_delete_warning_wizard_form" model="ir.ui.view">
        <field name="name">license.equipment.delete.warning.wizard.form</field>
        <field name="model">license.equipment.delete.warning.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmar Eliminación" class="o_subscription_form">
                <sheet>
                    <group class="oe_inline">
                        <field name="equipment_id" invisible="1"/>
                        <field name="equipment_name" readonly="1"/>
                        <field name="item_type" invisible="1"/>
                        <field name="assignment_quantity" readonly="1"/>
                        <field name="contracting_type" invisible="1"/>
                    </group>
                    <div class="mt-3">
                        <field name="warning_message" nolabel="1" readonly="1"/>
                    </div>
                </sheet>
                <footer>
                    <button name="action_confirm_delete" string="Confirmar Eliminación" type="object" class="btn-danger"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
