<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_license_equipment_add_multiple_wizard_form" model="ir.ui.view">
        <field name="name">license.equipment.add.multiple.wizard.form</field>
        <field name="model">license.equipment.add.multiple.wizard</field>
        <field name="arch" type="xml">
            <form string="Seleccionar equipos o contactos (varios o todos)" class="o_subscription_form">
                <group>
                    <field name="assignment_id" readonly="1"/>
                    <field name="add_type" readonly="1"/>
                </group>
                <group>
                    <div class="alert alert-info" role="alert" style="margin-bottom: 10px;">
                        <strong>Marque la casilla de cada elemento que desee asignar.</strong> Use «Seleccionar todos» o «Deseleccionar todos» y luego «Añadir seleccionados».
                    </div>
                </group>
                <group string="Lista (marque los que desee añadir)">
                    <field name="line_ids" nolabel="1">
                        <list create="0" delete="0" edit="1" limit="200" multi_edit="1">
                            <field name="selected" string="Seleccionar" widget="boolean_toggle"/>
                            <field name="lot_id" string="Equipo (Lote/Serie)" optional="show"/>
                            <field name="contact_id" string="Contacto" optional="show"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button name="action_select_all" string="Seleccionar todos" type="object" class="btn-secondary"/>
                    <button name="action_unselect_all" string="Deseleccionar todos" type="object" class="btn-secondary"/>
                    <button name="action_confirm" string="Añadir seleccionados" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_license_equipment_add_multiple_equipment" model="ir.actions.act_window">
        <field name="name">Añadir varios equipos</field>
        <field name="res_model">license.equipment.add.multiple.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_assignment_id': active_id, 'default_add_type': 'equipment'}</field>
    </record>

    <record id="action_license_equipment_add_multiple_contact" model="ir.actions.act_window">
        <field name="name">Añadir varios contactos</field>
        <field name="res_model">license.equipment.add.multiple.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_assignment_id': active_id, 'default_add_type': 'contact'}</field>
    </record>
</odoo>
