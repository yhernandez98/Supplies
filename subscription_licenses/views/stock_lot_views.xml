<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_lot_form_license_tab" model="ir.ui.view">
            <field name="name">stock.lot.form.license.tab</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Licenciamiento Asociado" name="license_assignment">
                        <notebook>
                            <page string="Licencias del Equipo" name="equipment_licenses">
                                <field name="license_equipment_ids" nolabel="1" readonly="1" 
                                       context="{'default_lot_id': id, 'search_default_assigned': 1}">
                                    <list string="Licencias Asignadas al Equipo" default_order="assignment_date desc" decoration-muted="state == 'unassigned'">
                                        <field name="license_id" string="Categoria"/>
                                        <field name="service_product_id" string="Licencia"/>
                                        <field name="assignment_date" string="Fecha Asignaci贸n"/>
                                        <field name="unassignment_date" string="Fecha Desasignaci贸n"/>
                                        <field name="state" widget="badge"
                                               decoration-success="state == 'assigned'"
                                               decoration-muted="state == 'unassigned'"
                                               string="Estado"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Licencias del Usuario" name="user_licenses" invisible="not related_partner_id">
                                <field name="related_partner_id" invisible="1"/>
                                <field name="license_user_ids" nolabel="1" readonly="1">
                                    <list string="Licencias Asignadas al Usuario" default_order="assignment_date desc" decoration-muted="state == 'unassigned'">
                                        <field name="license_id" string="Categoria"/>
                                        <field name="service_product_id" string="Licencia"/>
                                        <field name="assignment_date" string="Fecha Asignaci贸n"/>
                                        <field name="unassignment_date" string="Fecha Desasignaci贸n"/>
                                        <field name="state" widget="badge"
                                               decoration-success="state == 'assigned'"
                                               decoration-muted="state == 'unassigned'"
                                               string="Estado"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </page>
                </xpath>
            </field>
    </record>
</odoo>
