<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_license_type_tree" model="ir.ui.view">
        <field name="name">product.license.type.tree</field>
        <field name="model">product.license.type</field>
        <field name="arch" type="xml">
            <list string="Tipos de Licencia" decoration-muted="not active">
                <field name="code"/>
                <field name="name"/>
                <field name="price_usd" sum="Precio Total USD"/>
                <field name="assignment_count" string="Asignaciones"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_product_license_type_form" model="ir.ui.view">
        <field name="name">product.license.type.form</field>
        <field name="model">product.license.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Licencia" class="o_subscription_form">
                <header>
                    <button name="action_activate" string="Activar" type="object" class="btn-primary" 
                            invisible="active"/>
                    <button name="action_deactivate" string="Desactivar" type="object" class="btn-secondary"
                            invisible="not active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_assignments" type="object" 
                                class="oe_stat_button" icon="fa-users">
                            <field name="assignment_count" widget="statinfo" string="Asignaciones"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="code" placeholder="Ej: LIMIC-M365-BUSBA"/>
                            <field name="name" placeholder="Ej: MICROSOFT 365"/>
                            <field name="description" placeholder="Descripción del tipo de licencia..."/>
                        </group>
                        <group>
                            <field name="price_usd"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_product_license_type_search" model="ir.ui.view">
        <field name="name">product.license.type.search</field>
        <field name="model">product.license.type</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Buscar Tipos de Licencia">
                <field name="code"/>
                <field name="name"/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_product_license_type" model="ir.actions.act_window">
        <field name="name">Tipos de Licencia</field>
        <field name="res_model">product.license.type</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree un nuevo tipo de licencia
            </p>
            <p>
                Configure los tipos de licencias de software que maneja su empresa. Cada tipo de licencia 
                tiene un código único y un precio fijo en dólares.
            </p>
        </field>
    </record>
</odoo>

