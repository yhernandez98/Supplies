<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_license_provider_delete_wizard_form" model="ir.ui.view">
        <field name="name">license.provider.delete.wizard.form</field>
        <field name="model">license.provider.delete.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmar Eliminación de Proveedor" class="o_subscription_form">
                <sheet>
                    <group>
                        <group>
                            <field name="provider_stock_id" invisible="1"/>
                            <field name="provider_name" readonly="1"/>
                            <field name="license_name" readonly="1"/>
                            <field name="assigned_quantity" readonly="1"/>
                        </group>
                    </group>
                    <div class="alert alert-warning" role="alert" style="margin-top: 16px;">
                        <field name="warning_message" nolabel="1" readonly="1"/>
                    </div>
                </sheet>
                <footer>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    <button string="Eliminar Proveedor" name="action_confirm_delete" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_license_provider_delete_wizard" model="ir.actions.act_window">
        <field name="name">Confirmar Eliminación de Proveedor</field>
        <field name="res_model">license.provider.delete.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
