<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_license_equipment_tree" model="ir.ui.view">
        <field name="name">license.equipment.tree</field>
        <field name="model">license.equipment</field>
        <field name="arch" type="xml">
            <list string="Equipos con Licencias" class="o_license_module_list" decoration-muted="state == 'unassigned'">
                <field name="license_id"/>
                <field name="lot_id"/>
                <field name="inventory_plate"/>
                <field name="product_id"/>
                <field name="assignment_date"/>
                <field name="unassignment_date"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'assigned'"
                       decoration-muted="state == 'unassigned'"/>
            </list>
        </field>
    </record>

    <!-- Vista específica para botones de Usuarios y Equipos con columna Contacto -->
    <record id="view_license_equipment_tree_with_contact" model="ir.ui.view">
        <field name="name">license.equipment.tree.with.contact</field>
        <field name="model">license.equipment</field>
        <field name="arch" type="xml">
            <list string="Equipos con Licencias" class="o_license_module_list" decoration-muted="state == 'unassigned'">
                <field name="license_id"/>
                <field name="contact_id" string="Contacto"/>
                <field name="lot_id"/>
                <field name="inventory_plate"/>
                <field name="product_id"/>
                <field name="assignment_date"/>
                <field name="unassignment_date"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'assigned'"
                       decoration-muted="state == 'unassigned'"/>
            </list>
        </field>
    </record>

    <!-- Vista simplificada para mostrar en stock.lot (sin columnas de equipo) -->
    <record id="view_license_equipment_tree_simple" model="ir.ui.view">
        <field name="name">license.equipment.tree.simple</field>
        <field name="model">license.equipment</field>
        <field name="arch" type="xml">
            <list string="Licencias Asignadas" class="o_license_module_list" default_order="assignment_date desc" decoration-muted="state == 'unassigned'">
                <field name="license_id" string="Licencia"/>
                <field name="service_product_id" string="Servicio"/>
                <field name="assignment_date" string="Fecha Asignación"/>
                <field name="unassignment_date" string="Fecha Desasignación"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'assigned'"
                       decoration-muted="state == 'unassigned'"
                       string="Estado"/>
            </list>
        </field>
    </record>

    <record id="view_license_equipment_form" model="ir.ui.view">
        <field name="name">license.equipment.form</field>
        <field name="model">license.equipment</field>
        <field name="arch" type="xml">
            <form string="Asignación de Licencia (Equipo / Usuario)" class="o_subscription_form o_license_module_form">
                <header>
                    <button name="action_unassign" string="Desasignar" type="object" class="btn-secondary"
                            invisible="state == 'unassigned'"/>
                    <button name="action_reassign" string="Reasignar" type="object" class="btn-secondary"
                            invisible="state == 'assigned'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="assignment_id" options="{'no_create': True}"/>
                            <field name="license_id" readonly="1"/>
                            <field name="license_applies_to_equipment" invisible="1"/>
                            <field name="license_applies_to_user" invisible="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="location_id" readonly="1"/>
                            <field name="contact_id" options="{'no_create': True}" 
                                   placeholder="Seleccione un contacto (usuario) de la empresa"
                                   invisible="license_applies_to_equipment and not license_applies_to_user"/>
                            <field name="lot_id" options="{'no_create': True}"
                                   placeholder="Seleccione un equipo (lote/serie)"
                                   invisible="license_applies_to_user and not license_applies_to_equipment"/>
                            <field name="product_id" readonly="1" 
                                   invisible="not license_applies_to_equipment"/>
                            <field name="assignment_date"/>
                            <field name="unassignment_date"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Notas sobre la asignación..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_license_equipment_search" model="ir.ui.view">
        <field name="name">license.equipment.search</field>
        <field name="model">license.equipment</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Buscar Equipos">
                <field name="license_id"/>
                <field name="partner_id"/>
                <field name="contact_id"/>
                <field name="lot_id"/>
                <field name="product_id"/>
                <filter string="Asignados" name="assigned" domain="[('state', '=', 'assigned')]"/>
                <filter string="Desasignados" name="unassigned" domain="[('state', '=', 'unassigned')]"/>
                <filter string="Solo Usuarios" name="with_user" domain="[('contact_id', '!=', False)]"/>
                <filter string="Solo Equipos" name="with_equipment" domain="[('lot_id', '!=', False), ('contact_id', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_license_equipment" model="ir.actions.act_window">
        <field name="name">Equipos con Licencias</field>
        <field name="res_model">license.equipment</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_license_equipment_tree_with_contact"/>
        <field name="context">{'search_default_assigned': 1}</field>
        <field name="domain">[('lot_id', '!=', False), ('contact_id', '=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Asigne equipos a licencias
            </p>
            <p>
                Asigne equipos específicos (lotes/series) a las asignaciones de licencias. 
                Esto le permitirá llevar un control detallado de qué equipos tienen cada licencia asignada.
            </p>
        </field>
    </record>

    <record id="action_license_users" model="ir.actions.act_window">
        <field name="name">Usuarios con Licencias</field>
        <field name="res_model">license.equipment</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_license_equipment_tree_with_contact"/>
        <field name="context">{'search_default_assigned': 1, 'group_by': 'contact_id'}</field>
        <field name="domain">[('contact_id', '!=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Asigne usuarios a licencias
            </p>
            <p>
                Visualice los usuarios (contactos) que tienen licencias asignadas. 
                Si un equipo tiene un usuario asignado, se mostrará aquí en lugar de en equipos.
            </p>
        </field>
    </record>
</odoo>

