<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_exchange_rate_monthly_tree" model="ir.ui.view">
        <field name="name">exchange.rate.monthly.tree</field>
        <field name="model">exchange.rate.monthly</field>
        <field name="arch" type="xml">
            <list string="TRM Mensual" decoration-muted="not active">
                <field name="year"/>
                <field name="month"/>
                <field name="rate" sum="Tasa"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_exchange_rate_monthly_form" model="ir.ui.view">
        <field name="name">exchange.rate.monthly.form</field>
        <field name="model">exchange.rate.monthly</field>
        <field name="arch" type="xml">
            <form string="TRM Mensual" class="o_subscription_form">
                <sheet>
                    <group>
                        <group>
                            <field name="year"/>
                            <field name="month"/>
                            <field name="rate"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_exchange_rate_monthly_search" model="ir.ui.view">
        <field name="name">exchange.rate.monthly.search</field>
        <field name="model">exchange.rate.monthly</field>
        <field name="arch" type="xml">
            <search string="Buscar TRM Mensual">
                <field name="year"/>
                <field name="month"/>
                <field name="rate"/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Año" name="group_year" context="{'group_by': 'year'}"/>
                    <filter string="Mes" name="group_month" context="{'group_by': 'month'}"/>
                    <filter string="Compañía" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_exchange_rate_monthly" model="ir.actions.act_window">
        <field name="name">TRM Mensual</field>
        <field name="res_model">exchange.rate.monthly</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure las tasas de cambio (TRM) mensuales
            </p>
            <p>
                Ingrese la tasa de cambio de dólares a pesos colombianos para cada mes y año.
                Esta información se utilizará para calcular los costos de las licencias en pesos.
            </p>
        </field>
    </record>
</odoo>

